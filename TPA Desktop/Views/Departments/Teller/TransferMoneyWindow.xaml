<Window x:Class="TPA_Desktop.Views.Departments.Teller.TransferMoneyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:teller="clr-namespace:TPA_Desktop.Views.Departments.Teller"
        mc:Ignorable="d"
        Title="Transfer Money"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance teller:TransferMoneyWindowViewModel}">
    <Grid Margin="20" Width="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Destination Account Number" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DestinationAccountNumber}" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Amount" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Transaction.Amount}" />

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Transfer" Click="HandleTransfer" />
    </Grid>
</Window>