<Window x:Class="TPA_Desktop.Views.Departments.Manager.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:userControls="clr-namespace:TPA_Desktop.Views.UserControls"
        xmlns:manager="clr-namespace:TPA_Desktop.Views.Departments.Manager"
        mc:Ignorable="d"
        Title="Manager"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance manager:ManagerWindowViewModel}">
    <StackPanel Margin="20" Width="500">
        <userControls:Greeting />

        <DataGrid ItemsSource="{Binding Transactions, Mode=TwoWay}" />
        <Button Content="Generate Transactions Report" Click="HandleGenerateTransactionsReport" />

        <userControls:Logout />
    </StackPanel>
</Window>