<Window x:Class="TPA_Desktop.Views.Departments.Queueing_Machine.QueueingMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:userControls="clr-namespace:TPA_Desktop.Views.User_Controls"
        mc:Ignorable="d"
        Title="Queueing Machine"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid Height="250" Width="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Content="Teller" Click="HandleTellerQueue" />
        <Button Grid.Row="0" Grid.Column="1" Content="Customer Service" Click="HandleCustomerServiceQueue" />

        <userControls:Logout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />
    </Grid>
</Window>