<UserControl x:Class="TPA_Desktop.Views.UserControls.Greeting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TPA_Desktop.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" 
             d:DesignWidth="300" 
             d:DataContext="{d:DesignInstance local:GreetingViewModel}">
    <StackPanel>
        <TextBlock Text="{Binding Name, StringFormat=Hello\, {0}.}" />
        <TextBlock Text="{Binding Role, StringFormat=Logged in as {0}.}" />
    </StackPanel>
</UserControl>
