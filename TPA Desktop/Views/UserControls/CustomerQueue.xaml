<UserControl x:Class="TPA_Desktop.Views.UserControls.CustomerQueue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TPA_Desktop.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:CustomerQueueViewModel}">
    <StackPanel>
        <TextBlock Text="{Binding QueueNumber,StringFormat=Current queue number: {0}.}" />
        <Button Content="Next Queue" Click="HandleNextCustomerQueue" />
    </StackPanel>
</UserControl>